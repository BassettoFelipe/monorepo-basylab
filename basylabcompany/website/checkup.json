.section {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    overflow: hidden;
}

/* ============================================
   BACKGROUND
   ============================================ */
.background {
    position: absolute;
    inset: 0;
    overflow: hidden;
}

.backgroundBase {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, #030303 0%, #0a0a0a 50%, #050505 100%);
}

/* 3D Perspective Grid */
.grid3d {
    position: absolute;
    inset: -50%;
    transform-style: preserve-3d;
    perspective: 1000px;
    background-image:
        linear-gradient(rgba(231, 52, 58, 0.03) 1px, transparent 1px),
        linear-gradient(90deg, rgba(231, 52, 58, 0.03) 1px, transparent 1px);
    background-size: 80px 80px;
    mask-image: radial-gradient(ellipse at center, black 20%, transparent 70%);
    -webkit-mask-image: radial-gradient(
        ellipse at center,
        black 20%,
        transparent 70%
    );
}

/* Floating Code Particles */
.particles {
    position: absolute;
    inset: 0;
    pointer-events: none;
    overflow: hidden;
}

.particle {
    position: absolute;
    font-family: "SF Mono", "Fira Code", monospace;
    color: var(--color-brand-primary);
    opacity: 0.4;
    font-weight: 500;
    text-shadow: 0 0 10px var(--color-brand-primary);
}

/* Gradient Orbs */
.orbPrimary {
    position: absolute;
    top: 20%;
    left: 10%;
    width: 500px;
    height: 500px;
    border-radius: 50%;
    background: radial-gradient(
        circle,
        var(--color-brand-primary) 0%,
        transparent 70%
    );
    opacity: 0.15;
    filter: blur(80px);
}

.orbSecondary {
    position: absolute;
    bottom: 10%;
    right: 10%;
    width: 400px;
    height: 400px;
    border-radius: 50%;
    background: radial-gradient(circle, #ff6b6b 0%, transparent 70%);
    opacity: 0.1;
    filter: blur(100px);
}

/* CRT Scanlines Effect */
.scanlines {
    position: absolute;
    inset: 0;
    background: repeating-linear-gradient(
        0deg,
        transparent,
        transparent 2px,
        rgba(0, 0, 0, 0.1) 2px,
        rgba(0, 0, 0, 0.1) 4px
    );
    pointer-events: none;
    opacity: 0.3;
}

.noise {
    position: absolute;
    inset: 0;
    opacity: 0.02;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
    pointer-events: none;
}

.vignette {
    position: absolute;
    inset: 0;
