{
  "name": "@3balug/api",
  "version": "1.0.50",
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "start": "bun src/server.ts",
    "build": "bun build src/server.ts --outdir ./dist --target bun",
    "prod": "NODE_ENV=production bun dist/server.js",
    "clean": "rm -rf dist && bun run typecheck",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "format": "biome format --write src",
    "typecheck": "tsc --noEmit",
    "knip": "knip",
    "validate": "bun run clean && bun run typecheck && bun run lint && bun run knip",
    "check-console": "grep -r \"console\\.\\(log\\|error\\|warn\\|debug\\)\" src/ --include=\"*.ts\" --include=\"*.js\" -n | grep -v \"src/server.ts\" || true",
    "test": "bun run test:unit",
    "test:unit": "bun test src/use-cases",
    "test:middleware": "bun test src/controllers/middlewares",
    "test:e2e": "bun test src/controllers/routes",
    "test:repo": "bun test src/repositories",
    "test:all": "bun run test:unit && bun run test:middleware && bun run test:e2e && bun run test:repo",
    "test:fast": "bun test",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:push:force": "bunx drizzle-kit push --force",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run src/db/seeds/index.ts",
    "db:clean": "bun run src/scripts/db-clean.ts",
    "db:wait": "bun run src/scripts/db-wait.ts",
    "db:reset": "bun run db:wait && bun run db:clean && bun run db:push:force && bun run db:seed"
  },
  "dependencies": {
    "@basylab/core": "workspace:*",
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/jwt": "^1.4.0",
    "@elysiajs/swagger": "^1.3.1",
    "@sinclair/typebox": "^0.34.41",
    "awilix": "^12.0.5",
    "drizzle-orm": "^0.44.7",
    "elysia": "latest",
    "ioredis": "^5.8.2",
    "minio": "^8.0.6",
    "nodemailer": "^7.0.11",
    "otpauth": "^9.4.1",
    "pino": "^10.1.0",
    "postgres": "^3.4.7",
    "prom-client": "^15.1.3",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@elysiajs/eden": "^1.4.5",
    "@types/node": "^24.10.1",
    "@types/nodemailer": "^7.0.4",
    "bun-types": "latest",
    "drizzle-kit": "^0.31.7",
    "knip": "^5.71.0",
    "typescript": "^5.9.3"
  },
  "module": "src/server.ts"
}
