{
  "name": "@basyadmin/api",
  "version": "1.0.0",
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "start": "bun src/server.ts",
    "build": "bun build src/server.ts --outdir ./dist --target bun",
    "prod": "NODE_ENV=production bun dist/server.js",
    "clean": "rm -rf dist && bun run typecheck",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "format": "biome format --write src",
    "typecheck": "tsc --noEmit",
    "test": "bun test src/__tests__",
    "test:unit": "bun test src/__tests__/utils src/__tests__/middlewares",
    "test:routes": "bun test src/__tests__/routes",
    "test:all": "bun test src/__tests__",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:push:force": "bunx drizzle-kit push --force",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run src/db/seeds/index.ts",
    "db:reset": "bun run db:push:force && bun run db:seed"
  },
  "dependencies": {
    "@basylab/core": "workspace:*",
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/swagger": "^1.3.1",
    "@sinclair/typebox": "^0.34.41",
    "drizzle-orm": "^0.44.7",
    "elysia": "latest",
    "jose": "^5.9.6",
    "pino": "^10.1.0",
    "pino-pretty": "^13.0.0",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@elysiajs/eden": "^1.4.5",
    "@types/node": "^24.10.1",
    "bun-types": "latest",
    "drizzle-kit": "^0.31.7",
    "typescript": "^5.9.3"
  },
  "module": "src/server.ts"
}
