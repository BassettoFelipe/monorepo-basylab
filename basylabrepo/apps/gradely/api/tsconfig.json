{
	"compilerOptions": {
		"lib": ["ESNext"],
		"target": "ESNext",
		"module": "ESNext",
		"moduleDetection": "force",
		"jsx": "react-jsx",
		"allowJs": true,

		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,

		"skipLibCheck": true,
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"forceConsistentCasingInFileNames": true,

		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@config/*": ["./src/config/*"],
			"@db/*": ["./src/db/*"],
			"@routes/*": ["./src/routes/*"],
			"@middlewares/*": ["./src/controllers/middlewares/*"],
			"@plugins/*": ["./src/plugins/*"],
			"@repositories/*": ["./src/repositories/*"],
			"@use-cases/*": ["./src/use-cases/*"],
			"@utils/*": ["./src/utils/*"],
			"@errors/*": ["./src/errors/*"],
			"@services/*": ["./src/services/*"]
		},

		"types": ["bun-types"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
